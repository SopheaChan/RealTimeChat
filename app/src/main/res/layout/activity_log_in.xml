<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/dark_gray"
    tools:context=".activity_class.LogInActivity">
    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/darker_blue"
        android:textSize="45sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Email"
        android:inputType="text"
        android:textColorHint="@color/color_hint"
        android:textColor="@color/color_white"
        android:background="@drawable/edit_text_border"
        android:maxLines="1"
        android:layout_below="@id/login_title"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Password"
        android:textColorHint="@color/color_hint"
        android:background="@drawable/edit_text_border"
        android:textColor="@color/color_white"
        android:inputType="textPassword"
        android:maxLines="1"
        android:layout_below="@id/edit_text_email"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/login_fail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/login_fail"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edit_text_password"/>
    <TextView
        android:id="@+id/log_in_fail_help_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="12sp"
        android:layout_toEndOf="@id/login_fail_text"
        android:layout_marginStart="10dp"
        android:layout_below="@id/edit_text_password"/>
    <Button
        android:id="@+id/button_log_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/darker_blue"
        android:textAllCaps="false"
        android:layout_below="@id/login_fail_text"
        android:layout_marginTop="5dp"
        android:onClick="loginOnClick"/>
    <TextView
        android:id="@+id/text_view_optional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have account?"
        android:layout_below="@id/button_log_in"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/button_sign_up"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:src="@mipmap/sign_up_icon_3"
        android:scaleType="fitXY"
        android:layout_below="@id/text_view_optional"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="signUpOnClicked"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/straight_line"
        android:layout_toStartOf="@id/text_or"
        android:layout_below="@id/button_sign_up"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/straight_line"
        android:layout_toEndOf="@id/text_or"
        android:layout_below="@id/button_sign_up"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/text_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:layout_below="@id/button_sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/text_log_in_with_google_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with google account:"
        android:layout_below="@id/text_or"
        android:layout_centerHorizontal="true"/>
    <com.google.android.gms.common.SignInButton
        android:id="@+id/button_log_in_with_google_account"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_log_in_with_google_label"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />
    <ProgressBar
        android:id="@+id/login_progress_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/button_log_in_with_google_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/login_progress_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_progress_bar"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"/>

</RelativeLayout>