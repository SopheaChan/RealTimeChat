<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_class.ChatRoomActivity"
    android:background="@color/dark_gray">
    <RelativeLayout
        android:id="@+id/counterpart_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/counterpart_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher_round"/>
        <TextView
            android:id="@+id/counterpart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/counterpart_image"
            android:layout_marginTop="1dp"
            android:text="Jay Killer"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/counterpart_data_layout"
        android:layout_marginTop="5dp"
        android:layout_above="@id/edit_text_compose_message"/>
    <EditText
        android:id="@+id/edit_text_compose_message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toStartOf="@id/send_button"
        android:layout_alignParentBottom="true"
        android:hint="Write message..."
        android:inputType="text"
        android:textColorHint="@color/color_white"
        android:layout_marginEnd="5dp"/>
    <ImageView
        android:id="@+id/send_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/send_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>